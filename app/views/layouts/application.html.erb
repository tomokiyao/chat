<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="navbar navbar-inverse">
    <div class="containar">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <nav class="nav navbar-nav navbar-left">
            <span class="head-title">Bookers</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%=link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home" %>
              </li>
              <li>
                <%=link_to " Users", users_path(@users), class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%=link_to " Books", post_books_path(@post_books), class: "glyphicon glyphicon-book" %>
              </li>
              <li>
                <%=link_to " Logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </header>

    <%= yield %>
  </body>
</html>
