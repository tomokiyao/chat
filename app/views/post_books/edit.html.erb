			<div class="row">
				<div class="col-xs-10 col-xs-offset-1">
					<nav class="nav navbar-nav navbar-left">
						<span>Bookers</span>
					</nav>
					<nav>
						<ul class="nav navbar-nav navbar-right">
							<li>
								<%=link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home" %>
							</li>
							<li>
								<%=link_to " Users", users_path(@users), class: "glyphicon glyphicon-user" %>
							</li>
							<li>
								<%=link_to " Books", post_books_path(@post_books), class: "glyphicon glyphicon-book" %>
