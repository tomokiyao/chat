



	<div class="body">
		<div class="containar">
			<div class="row">
				<div class="col-xs-2 col-xs-offset-1">
					<h1>User info</h1>
						<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
							<table class="table">
								<tbody>
									<tr></tr>
									<tr>
									<td>name</td>
									<td><%=@user.name%></td>
									</tr>
									<tr>
										<td>introduction</td>
										<td><%=@user.introduction%></td>
									</tr>
									<tr>
										<td>
											<%= @user.followings.count %>
											<%= link_to 'follows', following_user_path(@user)%>
										</td>
										<td>
											<%= @user.followers.count %>
											<%= link_to 'followers', followers_user_path(@user)%>
										</td>
									</tr>
								</tbody>
							</table>
							<div class="row">
								<% if @user.id == current_user.id %>
								<%=link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
								<% end %>
							</div>
							<% if current_user != @user %>
								<% if @user.following_by?(current_user) %>
									<%= link_to "unfollow", user_relationships_path(@user), method: :delete ,class: "btn btn-danger col-xs-12" %>
								<% else %>
									<%= link_to "follow", user_relationships_path(@user), method: :post, class: "btn btn-primary col-xs-12" %>
								<% end %>
							<% end %>


					<h2>New Book</h2>
						<%= form_for(@post_book) do |f| %>
							<div class="field row">
								<label for="book_name">Title</label>
									<%= f.text_field :book_name, class: "col-xs-12" %>
							</div>
							<div class="field row">
								<label for="caption">Opinion</label>
									<%= f.text_area :caption, class: "col-xs-12" %>
							</div>
							<br>
							<div class="action row">
								<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary"%>
							</div>
						<% end %>
				</div>


				<div class="col-xs-8">
					<h2>Books</h2>
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @post_books.each do |post_book| %>
								<tr>
									<td>
										<%=attachment_image_tag post_book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "", fallback:"no_image.jpg",:size => "40x40" %>
									</td>
									<td>
										<%= link_to post_book_path(post_book.id) do %>
											<%= post_book.book_name %>
										<% end %>
									</td>
									<td>
										<%= post_book.caption %>
									</td>
									<td>
										<%= render 'favorites/favorite', post_book: post_book %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<footer>
	<div class="containar">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>
